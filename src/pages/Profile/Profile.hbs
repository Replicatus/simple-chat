<div class="profile-page__content">
    <div class="header">
        <div>

            {{{avatar}}}
        </div>
        <h2>Roman</h2>
    </div>
    <form>
        {{#if changePassword}}
            {{#each inputs}}
                <div>
                    <span>
                        {{#with (lookup ../fieldsForPasswordPage @key)~}}
                            {{text}}
                        {{/with}}
                    </span>
                    {{{ this }}}
                </div>
            {{/each}}
        {{else}}
            {{#each inputs}}
                <div>
                    <span>
                        {{#with (lookup ../fields @key)~}}
                            {{text}}
                        {{/with}}

                    </span>
                    {{{ this }}}
                </div>
            {{/each}}
        {{/if}}
    </form>
    <div class="profile-page__content-actions">
        {{#if changeProfile}}
            <div class="border-zero d-flex justify-center flex-1">
                {{{ buttonSave }}}
            </div>
        {{else}}
            {{#if changePassword}}
                <div class="border-zero d-flex justify-center flex-1">
                    {{{ buttonSavePassword }}}
                </div>
            {{else}}
                <div>
                    {{{ buttonChange }}}
                </div>
                <div>
                    {{{ buttonChangePassword }}}
                </div>
                <div>
                    {{{ buttonExit }}}
                </div>
            {{/if}}
        {{/if}}
    </div>
</div>
