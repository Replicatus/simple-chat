<label class="input {{labelClass}}">
   {{label}}
    <input
            class="{{class}}"
            type="{{type}}"
            id="{{id}}"
            name="{{name}}"
            value="{{value}}"
            placeholder="{{placeholder}}"
            {{disabled}}
            autocomplete="off"
    >
    <span class="error">{{errorText}}</span>
</label>